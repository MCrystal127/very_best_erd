<div class="page-header">
  <h1>
    Cuisine tags
    <a href="/cuisine_tags/new" class="btn btn-lg btn-success">New Cuisine tag</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Cuisine type</th>
        <th>Actions</th>
      </tr>

      <% @cuisine_tags.each do |cuisine_tag| %>
      <tr>
        <td><%= cuisine_tag.cuisine_type %></td>
        <td>
          <a href="/cuisine_tags/<%= cuisine_tag.id %>" class="btn btn-primary">Show</a>
          <a href="/cuisine_tags/<%= cuisine_tag.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cuisine_tag/<%= cuisine_tag.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @cuisine_tags, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
