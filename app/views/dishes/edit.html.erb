<!-- Validation failure messages -->
<% if @dish.errors.any? %>
  <% @dish.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Dish #<%= @dish.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_dish/<%= @dish.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dish_name -->
      <div class="form-group">
        <label for="dish_name" class="control-label">
          Dish name
        </label>

        <input type="text" id="dish_name" name="dish_name" placeholder="Dish name" class="form-control" value="<%= @dish.dish_name %>">
      </div>

      <!-- Label and input for dish_description -->
      <div class="form-group">
        <label for="dish_description" class="control-label">
          Dish description
        </label>

        <textarea id="dish_description" name="dish_description" placeholder="Dish description" class="form-control" rows="3"><%= @dish.dish_description %></textarea>
      </div>

      <!-- Label and input for venues_available -->
      <div class="form-group">
        <label for="venues_available" class="control-label">
          Venues available
        </label>

        <input type="text" id="venues_available" name="venues_available" placeholder="Venues available" class="form-control" value="<%= @dish.venues_available %>">
      </div>

      <!-- Label and input for dish_price -->
      <div class="form-group">
        <label for="dish_price" class="control-label">
          Dish price
        </label>

        <input type="text" id="dish_price" name="dish_price" placeholder="Dish price" class="form-control" value="<%= @dish.dish_price %>">
      </div>

      <button class="btn btn-warning">
        Update Dish
      </button>
      or
      <a href="/dishes/<%= @dish.id %>">Cancel</a>
    </form>
  </div>
</div>
